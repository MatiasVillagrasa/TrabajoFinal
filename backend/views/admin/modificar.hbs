<div class="container" style="margin-top:100px;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar un Producto</h4>
            <form action="/admin/productos/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{producto.id}}" name="id">
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Nombre Producto" name="nombre"
                        value="{{producto.nombre}}">
                </div>
                <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="Descripcion"
                        name="descripcion">{{producto.descripcion}}</textarea>
                </div>
                <div class="mb-3 row">
                    <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
                </div>
                <div class="mb-3 row">
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                        Eliminar imagen actual?</label>
                    <input type="hidden" value="{{producto.id_imagen}}" name="img_original">
                </div>
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            </form>
            {{#if error}}
            <p style="color: red;">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>